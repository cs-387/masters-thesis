samtools index N_dedup.bam N_dedup.bai
# Create target intervals list using RealignerTargetCreator
java -jar $GATKCLASSPATH/GenomeAnalysisTK.jar -T RealignerTargetCreator â€“R nuclear.fa -I N_dedup.bam -o N_realignertargetcreator.intervals 

